#!/bin/sh -e

echo '#define SYS_VIMRC_FILE "/etc/vimrc"' >> src/feature.h

./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --enable-cscope \
    --enable-multibyte \
    --with-ex-name=ex \
    --with-view-name=vim-view \
    --enable-perlinterp \
    --enable-python3interp \
    --with-python3-config-dir=$(python3-config --configdir) \
    --enable-rubyinterp \
    --enable-luainterp \
    --disable-netbeans \
    --disable-gpm \
    --disable-hangulinput \
    --enable-xim \
    --disable-gui \
    --disable-nls \
    --with-x

make
make DESTDIR="$1" install
